{
  "compilerOptions": {
    "target": "esnext",
    "module": "commonJS",
    "baseUrl": "./",
    "paths": {
      "@/*": ["src/*"]
    }
  },
  "include": [
    "./**/*.js",
    "src/*.js",
    "src/*.vue",
    "src/**/*.js",
    "src/**/*.jsx",
    "src/**/*.vue"
  ],
  "exclude": ["node_modules", "dist"]
}
